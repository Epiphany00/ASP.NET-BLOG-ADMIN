@model IEnumerable<TestProject.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>

@using TestProject.Models

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title mt-0 mb-3">Blog</h4>
            <div class="table-responsive">
                <div> <a href="/Blogs/Create" class="badge badge-md badge-soft-purple newUser">Add New Blog</a></div>
                <table class="table table table-responsive-sm" id="myTable">

                    <thead class="thead-light">
                        <tr>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Picture</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var tmp in Model)
                        {
                        <tr>
                            <td>@tmp.Category.categoryname</td>
                            <td>@tmp.title</td>
                            <td>@tmp.description.Substring(0,45)</td>


                            <td>
                                <img src="@tmp.pictureURL" width="100" height="100" />
                            </td>


                            <td>
                                <a href="~/Blogs/Details/@tmp.blogID" class="mr-2"><i class="fas fa-eye font-16 "></i></a>
                                <a href="~/Blogs/Edit/@tmp.blogID" class="mr-2"><i class="fas fa-edit text-info font-16 "></i></a>
                                <a href="~/Blogs/Delete/@tmp.blogID" class="fas fa-trash-alt text-danger font-16  "></a>
                            </td>




                        </tr>
                        }




                    </tbody>
                </table>
            </div>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->
