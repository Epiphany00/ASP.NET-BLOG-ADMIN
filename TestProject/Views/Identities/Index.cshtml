@model IEnumerable<TestProject.Models.Identity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>

@using TestProject.Models

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title mt-0 mb-3">Identity</h4>
            <div class="table-responsive">
                <div> <a href="/Identities/Create" class="badge badge-md badge-soft-purple newUser">Add New Identity</a></div>
                <table class="table table table-responsive-sm" id="myTable">

                    <thead class="thead-light">
                        <tr>

                            <th>Title</th>
                            <th>Keywords</th>
                            <th>Description</th>
                            <th>Degree</th>
                            <th>Picture</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var tmp in Model)
                        {
                        <tr>
                            <td>@tmp.Title</td>
                            <td>@tmp.Keywords</td>
                            <td>@tmp.Description</td>
                            <td>@tmp.degree</td>
                            
                            <td>
                                <img src="@tmp.LogoURL" width="100" height="100" />
                            </td>


                            <td>
                                <a href="~/Identities/Details/@tmp.IdentityID" class="mr-2"><i class="fas fa-eye font-16 "></i></a>
                                <a href="~/Identities/Edit/@tmp.IdentityID" class="mr-2"><i class="fas fa-edit text-info font-16 " ></i></a>
                                <a href="~/Identities/Delete/@tmp.IdentityID" class="fas fa-trash-alt text-danger font-16  " ></a>
                            </td>




                        </tr>
                        }




                    </tbody>
                </table>
            </div>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->
