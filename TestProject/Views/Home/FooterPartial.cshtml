<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Get in touch with us</h5>
                    <address>
                        <strong>@ViewBag.Contacts.Adress</strong>
                    </address>
                    <p>
                        <i class="icon-phone"></i>@ViewBag.Contacts.phone <br>
                        <i class="icon-envelope-alt"></i>
                        temporarydemo12@gmail.com
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Pages</h5>
                    <ul class="link-list">
                        <li><a href="/Home/Index/">Demo Project</a></li>
                        <li><a href="/Home/Abouts/">About Us</a></li>
                        <li><a href="/Home/Services/">Services</a></li>
                        <li><a href="/Home/Blogs/">Blog</a></li>
                        <li><a href="/Home/Contacts/">Contact us</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Latest Posts</h5>
                    <ul class="link-list">
                        @foreach (var tmp in ViewBag.Blogs)
                        {
                            <li><a href="Home/BlogDetail/@tmp.blogID">@tmp.title</a></li>
                        }


                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Latest Services</h5>
                    <div class="flickr_badge">
                        @foreach (var tmp in ViewBag.Services)
                        {
                            <img src="@tmp.PictureURL" width="75" height="30" />
                        }

                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
