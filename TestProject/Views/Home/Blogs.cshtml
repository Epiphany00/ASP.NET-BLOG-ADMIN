@using PagedList;
@using PagedList.Mvc;   

@model PagedList<TestProject.Models.Blog>

@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <h3><a href="/Home/BlogDetail/@item.blogID">@item.title</a></h3>
                            </div>
                            <img src="@item.pictureURL" alt="@item.title "height="360" width="450" />
                        </div>
                        <p>
                            @Html.Raw(item.description.Substring(0,100))...
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">


                                <li><i class="icon-folder-open"></i><a href="#"> @item.Category.categoryname</a></li>
                                @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                            </ul>
                            <a href="/BlogPost/@item.blogID" class="pull-right">Continue<i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }


                <div id="pagination">
                   @Html.PagedListPager(Model, Page => Url.Action("Blogs", new { Page }), PagedListRenderOptions.Classic)
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>

                    <div class="widget">
                        <h5 class="widgetheading">Categories</h5>
                        @{
                            Html.RenderAction("BlogCategoryPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Latest Blogs</h5>
                        <ul class="recent">
                            <li>
                                @{
                                    Html.RenderAction("BlogSubmitDetail", "Home");
                                }
                            </li>
                        </ul>
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>

